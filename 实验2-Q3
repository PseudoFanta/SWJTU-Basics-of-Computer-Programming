//大小写转换+ASCII输出

#include <iostream>
#include<string>
#include<iomanip>
using namespace std;

void main(void)
{
	cout << "2018000000" << "    " << "PseudoFanta" << endl;

	char letter;//小写字母输入变量letter1
	char Cletter;//大写字母变量设定
	cout << "请输入一个小写字母……" ;
	cin >> letter;

	Cletter = letter - 32;//小写转大写

	int Aletter;//ASCII编码的小写字母
	int ACletter;//ASCII编码的大写字母

	Aletter = double(letter);
	ACletter = double(Cletter);


	cout << "您输入的小写字母为……" << letter << endl;
	cout << "其ASCII数值为……" << Aletter<<endl;
	cout << "对应的大写字母为……" << Cletter << endl;
	cout << "其ASCII数值为……" <<ACletter<< endl;


system("pause");

}
