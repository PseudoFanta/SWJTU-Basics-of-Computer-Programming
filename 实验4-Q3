//休年假

#include <iostream>
#include<iomanip>
using namespace std;

void main()
{
	cout<<"2018000000"<<setw(15)<<"PseudoFanta"<<endl;


	int year;//工龄变量定义
	cout << "请输入您的工龄……";
	cin >> year;
	cout << endl;
	//工龄输入 准备就绪

	if (year > 0)
	{
		if (year >= 1 && year <= 5)
		{
			cout << "您有7天年假。";
		}
		else
		{
			if (year >= 6 && year <= 10)
			{
				cout << "您有14天年假。";
			}
			else
			{
				if (year >= 11 & year <= 20)
				{
					cout << "您有21天年假。";
				}
				else
				{
					cout << "您有28天年假。";
				}
			}
		}

	}
	else
	{
		cout << "您尚无年休。";
	}

	system("pause");

}
